{
	"$schema": "https://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["mediaList"],
	"properties": {
		"loopMediaList": { "type": "boolean" },
		"mediaList": {
			"description": "A list of media to configure the media player to operate on.",
			"type": "array",
			"items": {
                "oneOf": [
                    {
                        "type": "object",
                        "description": "Configuration for an image media.",
                        "properties": {
                            "imageUrl": { "type": "string" },
                            "skipAfter": { "type": "number" }
                        },
                        "required": ["imageUrl"]
                    },
                    {
                        "type": "object",
                        "description": "Configuration for a video media.",
                        "properties": {
                            "videoUrl":  { "type": "string" },
                            "skipAfter": {"type": "number" },
                            "volume": {"type": "number" },
                            "startTime": { "type": "number"},
                            "loop": { "type": "boolean" },
                            "rolloffStartDistance": { "type": "number" }
                        },
                        "required": ["videoUrl"]
                    }
                ]
			}
        }
    }
}
