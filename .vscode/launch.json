    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Media Player",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "run-script",
              "debug"
            ],
            "port": 9229,
            "cwd": "${workspaceFolder}",
            "internalConsoleOptions": "openOnSessionStart",
            "autoAttachChildProcesses": true,
            "console": "internalConsole",
            "outputCapture": "std"
          },
          {
            "type": "node",
            "request": "attach",
            "name": "Attach to running project",
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart",
            "restart": true,
          },
    ]
}